{
  "name": "dabih-attachments",
  "version": "1.0.0",
  "type": "module",
  "description": "PDF conversion and antivirus scanning service for Dabih",
  "main": "src/index.js",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:e2e": "vitest run src/test/e2e/convert.spec.ts",
    "test:e2e:docker": "docker compose -f docker-compose.e2e.yml up --build --abort-on-container-exit --exit-code-from e2e --remove-orphans"
  },
  "keywords": [
    "pdf",
    "conversion",
    "libreoffice",
    "clamav",
    "antivirus"
  ],
  "author": "Trinnvis AS",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.21.2",
    "libreoffice-convert": "^1.7.0",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.2",
    "sharp": "^0.34.5",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.5",
    "@types/pdfkit": "^0.17.4",
    "axios": "^1.13.2",
    "form-data": "^4.0.5",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0"
  }
